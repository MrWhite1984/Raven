            <input type="datetime-local" id="endDate" name="endDate" />
            <button type="button">Фильтровать</button>
            <button type="button">Показать все логи</button>
        </form>
        <div class="level-filters">
            <label>
                <input type="checkbox" name="name" value="" checked /> INFORMATION
            </label>
            <label>
